<?php if ($this->getProducts()): ?>
    <div class="products-grid">
        <?php foreach ($this->getProducts() as $productId): ?>
            <?php $product = $block->getProductById($productId); ?>
            <div class="product-item">
                <a href="<?php echo $product->getProductUrl(); ?>">
                    <img src="<?php echo $block->getImageUrl($product); ?>" alt="<?php echo $block->escapeHtml($product->getName()); ?>" />
                    <h2><?php echo $block->escapeHtml($product->getName()); ?></h2>
                    <span><?php echo $block->escapeHtml($product->getPrice()); ?></span>
                </a>
            </div>
        <?php endforeach; ?>
    </div>
<?php else: ?>
    <p>No products found.</p>
<?php endif; ?>
